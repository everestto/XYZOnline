@page
@model XYZOnline.NewProductModel
@{
    ViewData["Title"] = "New Product";
}

<h4>New Product</h4>

<div class="col-md-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Product.Group.Name" class="control-label"></label>
                    <select asp-for="Product.Group.ID" asp-items="Model.ProductGroupOptions" class="form-control"></select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control" />
                </div>
                <span asp-validation-for="Product.Group.Name" class="text-danger"></span>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
        <hr />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn btn-secondary" />
        </div>
    </form>
</div>
